{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./dist/",
    "module": "NodeNext",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["./config/*"],
      "@controllers/*": ["./controllers/*"],
      "@models/*": ["./models/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@useCases/*": ["./useCases/*"],
      "@utils/*": ["./utils/*"],
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
},
}
